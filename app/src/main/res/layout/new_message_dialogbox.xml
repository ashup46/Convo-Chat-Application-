<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chatbackground"
    android:elevation="10dp"

    android:id="@+id/dialog_box_cardView"
    android:backgroundTint="#3B73B5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/recipent_id_dailog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Enter Recipent Id"
            />
        <EditText
            android:id="@+id/enter_starting_message_dailog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Enter Message"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_message_btn_dailog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="SEND MESSAGE"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/canel_button_dailog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:text="CANCEL"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>